client.focused_inactive #1d1f21 #1d1f21 #c5c8c6 #1d1f21   #1d1f21
client.unfocused        #1d1f21 #1d1f21 #c5c8c6 #1d1f21   #1d1f21
client.urgent           #cc6666 #1d1f21 #cc6666 #1d1f21   #cc6666
client.placeholder      #1d1f21 #1d1f21 #c5c8c6 #1d1f21   #c5c8c6
client.background       #1d1f21

bar {
  status_command i3status
  tray_output primary

  colors {
    #color class       border  back.   text
    focused_workspace  #8abeb7 #8abeb7 #ffffff
    active_workspace   #81a2be #81a2be #ffffff
    inactive_workspace #1d1f21 #1d1f21 #ffffff
