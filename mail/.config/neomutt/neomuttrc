set folder=~/mail
set mbox_type=Maildir
set header_cache=~/.cache/mutt/headers
set message_cachedir=~/.cache/mutt/bodies
set history_file=~/.cache/mutt/mutthistory
set certificate_file=/etc/ssl/certs/ca-certificates.crt
set mailcap_path=~/.config/neomutt/mailcap
set tmpdir=/tmp/mutt

# sync
set delete
set quit
unset wait_key
set timeout=4
unset mark_old
unset move
set mail_check=0
set mail_check_stats
set thorough_search
unset confirmappend
unset beep_new
unset sig_dashes # config in sig

# editing
set use_envelope_from
set fcc_attach
set text_flowed
set forward_quote
set forward_decode
unset mime_forward
set edit_headers
set include

# ui
set date_format="%Y.%m.%d %H:%M"
set sort=threads
set sort_aux = reverse-last-date-received
set uncollapse_jump
set sort_re
set pager_index_lines=8
set pager_context=4
set menu_scroll
set tilde
unset markers

# pager
ignore *
unignore from: to: cc: bcc: date: subject:
unhdr_order *
hdr_order from: to: cc: bcc: date: subject:
alternative_order text/plain text/enriched text/html
auto_view text/html

# sidebar
set sidebar_visible
set sidebar_short_path
set sidebar_folder_indent
set sidebar_indent_string = "  "
set sidebar_width=32
set sidebar_divider_char = "| "

# mailboxes
mailboxes =gmail
mailboxes =gmail/inbox =gmail/archive =gmail/sent =gmail/drafts =gmail/trash =gmail/spam

# keybindings
bind index,pager k previous-entry
bind index,pager j next-entry
bind index,pager \Cu half-up
bind index,pager \Cd half-down
bind index,pager g noop
bind index gg first-entry
bind pager gg top
bind index G last-entry
bind pager G bottom
bind index,pager \Cj sidebar-next
bind index,pager \Ck sidebar-prev
bind index,pager \Cl sidebar-open
bind index,pager @ compose-to-sender
bind index,pager R group-reply
bind index,pager D purge-message
bind index <tab> sync-mailbox
bind index <space> collapse-thread
macro index,pager \Cb "<pipe-message>urlscan<enter>" "extract message URLs"
macro index,pager P "<shell-escape>mbsync -a<enter>" "run mbsync"
bind attach <return> view-mailcap
bind editor <tab> complete-query

set realname="Kevin Wang"
source ~/.config/neomutt/account/gmail

folder-hook gmail/* source ~/.config/neomutt/account/gmail
